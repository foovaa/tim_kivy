#:kivy 1.11.1

<MyWidget>:
    Button:
        text: 'Popup'
        on_release: root.popupButton()

<MyPopup>:
    Label:
        text: 'You pressed this button!'
        size_hint: .6, .2
        pos_hint: {'x': 0.2, 'top': 1}

    Button:
        text: 'OK'
        size_hint: .8, .2
        pos_hint: {'x': 0.1, 'top': 0.3}
